.map_container{
    width: 800rpx;
}
map{
    width: 100%;
    height: 1400rpx;
}
.popupContainer{
    width: 75%;
    height: 200rpx;
    z-index: 1;
    background-color: #fff;
    border: 4rpx dashed darkgray;
    border-radius: 8%;
    border-top-right-radius: 0%;
    position: absolute;
    margin-top: 10rpx;
    opacity: 0.8;
}
.popupContent{
    width: 100%;
    float: left;
    margin: 10rpx;
    font-size: small;
}
.closePopup{
    width: 30rpx;
    height: 30rpx;
    float: right;
    border-bottom-left-radius: 30%;
    border: 4rpx dashed darkgray;
    background-color:rgba(218, 114, 114, 0.863);
}